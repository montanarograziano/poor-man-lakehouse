# =============================================================================
# Poor Man's Lakehouse - Environment Configuration
# =============================================================================
# Copy this file to .env and customize as needed:
#   cp .env.example .env
#
# IMPORTANT: Make sure CATALOG matches the Docker profile you're using:
#   just up nessie      -> CATALOG="nessie"
#   just up lakekeeper  -> CATALOG="lakekeeper"
#   just up             -> CATALOG="postgres"
# =============================================================================

# -----------------------------------------------------------------------------
# Catalog Selection
# Options: nessie, lakekeeper, postgres, unity_catalog
# -----------------------------------------------------------------------------
CATALOG="nessie"
CATALOG_NAME="nessie"

# -----------------------------------------------------------------------------
# AWS / MinIO Configuration
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID="minioadmin"
AWS_SECRET_ACCESS_KEY="miniopassword"
AWS_ENDPOINT_URL="http://minio:9000"
AWS_S3_USE_PATH_STYLE="true"
AWS_DEFAULT_REGION="eu-central-1"
BUCKET_NAME="warehouse"

# -----------------------------------------------------------------------------
# PostgreSQL (Catalog Backend)
# -----------------------------------------------------------------------------
POSTGRES_HOST="postgres_db"
POSTGRES_PORT="5432"
POSTGRES_DB="catalog_db"
POSTGRES_USER="user"
POSTGRES_PASSWORD="password"

# -----------------------------------------------------------------------------
# Nessie Configuration
# -----------------------------------------------------------------------------
NESSIE_SPARK_SERVER_URI="http://nessie:19120/api/v1"
NESSIE_DREMIO_SERVER_URI="http://nessie:19120/api/v2"
NESSIE_PYICEBERG_SERVER_URI="http://nessie:19120/iceberg"

# -----------------------------------------------------------------------------
# Lakekeeper Configuration
# -----------------------------------------------------------------------------
LAKEKEEPER_SERVER_URI="http://lakekeeper:8181"

# -----------------------------------------------------------------------------
# Dremio Configuration
# -----------------------------------------------------------------------------
DREMIO_USERNAME="dremio"
DREMIO_ROOT_PASSWORD="dremio123"
DREMIO_ROOT_EMAIL="admin@example.com"
DREMIO_SERVER_URI="http://dremio:9047"
ARROW_ENDPOINT="grpc://dremio:32010"

# -----------------------------------------------------------------------------
# Spark Configuration
# -----------------------------------------------------------------------------
SPARK_MASTER="local[*]"
# SPARK_HOME="/opt/spark"  # Uncomment if using system Spark

# -----------------------------------------------------------------------------
# Logging
# Options: DEBUG, INFO, WARNING, ERROR
# -----------------------------------------------------------------------------
LOG_VERBOSITY="INFO"

# -----------------------------------------------------------------------------
# Java (Required for PySpark)
# Uncomment and set if JAVA_HOME is not already configured
# -----------------------------------------------------------------------------
# JAVA_HOME="/usr/lib/jvm/java-17-openjdk"
